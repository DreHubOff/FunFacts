<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E0F7FA"
    android:layout_marginVertical="2dp"
    android:paddingHorizontal="2dp"
    android:paddingVertical="1dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/number_of_fact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/number_of_fact_background"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:paddingHorizontal="3dp"
            android:paddingVertical="3dp"
            android:textColor="#ffffff"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/fact_buddy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/number_of_fact"
            app:layout_constraintTop_toTopOf="parent"

            tools:text="By the time a cat is 9 years old, it will only have been awake for three years of its life." />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
